<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<BorderPane fx:id="dashboardContainer" styleClass="dashboard-container"
            prefWidth="1200.0" prefHeight="800.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.focusbuddy.controllers.DashboardController">

   <!-- TOP NAVIGATION BAR -->
   <top>
      <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="top-bar" prefHeight="55.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="12.0">
               <children>
                  <StackPane>
                     <children>
                        <Circle radius="16.0" styleClass="logo-circle-2" />
                        <Label text="🎯" style="-fx-font-size: 16px;" />
                     </children>
                  </StackPane>
                  <VBox spacing="1.0">
                     <children>
                        <Label fx:id="welcomeLabel" styleClass="welcome-title" text="Welcome back!" maxWidth="350.0">
                           <font><Font name="System Bold" size="15.0" /></font>
                        </Label>
                        <Label styleClass="welcome-subtitle" text="Ready to boost your productivity?">
                           <font><Font size="11.0" /></font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="12.0">
               <children>
                  <!-- Dynamic weather/time label -->
                  <Label fx:id="weatherLabel" text="🌤️ Good morning!" styleClass="weather-text">
                     <font><Font size="11.0" /></font>
                  </Label>
                  <ToggleButton fx:id="themeToggle" styleClass="theme-toggle" text="☀️" />
                  <Button fx:id="logoutButton" styleClass="logout-button" text="Sign Out">
                     <font><Font size="11.0" /></font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding><Insets bottom="12.0" left="20.0" right="20.0" top="12.0" /></padding>
      </HBox>
   </top>

   <!-- SIDEBAR NAVIGATION -->
   <left>
      <VBox fx:id="sidebar" prefWidth="220.0" styleClass="sidebar" minWidth="200.0" maxWidth="240.0">
         <children>
            <!-- User Profile Section with Real Data -->
            <VBox alignment="CENTER" spacing="10.0" styleClass="user-profile-section">
               <children>
                  <StackPane>
                     <children>
                        <Circle radius="24.0" styleClass="profile-avatar" />
                        <Label text="👤" style="-fx-font-size: 18px; -fx-text-fill: white;" />
                     </children>
                  </StackPane>
                  <VBox alignment="CENTER" spacing="2.0">
                     <children>
                        <!-- Real user name from database -->
                        <Label fx:id="userNameLabel" text="Loading..." styleClass="profile-name">
                           <font><Font name="System Bold" size="12.0" /></font>
                        </Label>
                        <!-- Dynamic user level based on activity -->
                        <Label fx:id="userLevelLabel" text="Calculating level..." styleClass="profile-level">
                           <font><Font size="10.0" /></font>
                        </Label>
                     </children>
                  </VBox>
               </children>
               <padding><Insets bottom="15.0" top="15.0" /></padding>
            </VBox>

            <VBox spacing="8.0">
               <children>
                  <Label text="NAVIGATION" styleClass="sidebar-section-header" />
                  <VBox spacing="3.0">
                     <children>
                        <Button fx:id="dashboardBtn" maxWidth="Infinity" styleClass="sidebar-button" text="📊  Dashboard" minHeight="40.0" />
                        <Button fx:id="tasksBtn" maxWidth="Infinity" styleClass="sidebar-button" text="✅  My Tasks" minHeight="40.0" />
                        <Button fx:id="pomodoroBtn" maxWidth="Infinity" styleClass="sidebar-button" text="🍅  Focus Timer" minHeight="40.0" />
                        <Button fx:id="moodBtn" maxWidth="Infinity" styleClass="sidebar-button" text="😊  Mood Tracker" minHeight="40.0" />
                        <Button fx:id="notesBtn" maxWidth="Infinity" styleClass="sidebar-button" text="📝  Notes" minHeight="40.0" />
                        <Button fx:id="goalsBtn" maxWidth="Infinity" styleClass="sidebar-button" text="🎯  Goals" minHeight="40.0" />
                     </children>
                  </VBox>
               </children>
            </VBox>

            <Separator>
               <VBox.margin><Insets bottom="15.0" left="20.0" right="20.0" top="15.0" /></VBox.margin>
            </Separator>

            <VBox spacing="8.0">
               <children>
                  <Label text="TOOLS" styleClass="sidebar-section-header" />
                  <VBox spacing="3.0">
                     <children>
                        <Button fx:id="exportBtn" maxWidth="Infinity" styleClass="sidebar-button" text="💾  Export Data" minHeight="40.0" />
                     </children>
                  </VBox>
               </children>
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <!-- Dynamic Daily Quote Section -->
            <VBox spacing="8.0" styleClass="daily-quote-section" alignment="CENTER">
               <children>
                  <Label text="💡" style="-fx-font-size: 16px;" />
                  <!-- Dynamic quote that changes daily -->
                  <Label fx:id="dailyQuoteLabel" text="Loading daily inspiration..." styleClass="daily-quote" wrapText="true" textAlignment="CENTER">
                     <font><Font size="10.0" /></font>
                  </Label>
               </children>
               <padding><Insets bottom="12.0" left="15.0" right="15.0" top="12.0" /></padding>
            </VBox>

            <VBox spacing="5.0" alignment="CENTER">
               <children>
                  <Label text="FocusBuddy v1.0" styleClass="version-text">
                     <font><Font size="9.0" /></font>
                  </Label>
               </children>
               <padding><Insets bottom="15.0" /></padding>
            </VBox>
         </children>
         <padding><Insets bottom="10.0" left="15.0" right="15.0" top="15.0" /></padding>
      </VBox>
   </left>

   <!-- MAIN CONTENT AREA -->
   <center>
      <StackPane fx:id="contentArea" prefWidth="980.0" prefHeight="745.0">
         <children>
            <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                        style="-fx-background-color: transparent;" pannable="false">
               <content>
                  <VBox spacing="20.0" fillWidth="true" prefWidth="940.0" maxWidth="1200.0">
                     <children>
                        <!-- HERO SECTION WITH REAL DATA -->
                        <HBox spacing="20.0" alignment="CENTER">
                           <children>
                              <!-- Real Quick Stats Cards -->
                              <VBox spacing="12.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox styleClass="stat-card-modern" HBox.hgrow="ALWAYS" spacing="6.0">
                                             <children>
                                                <HBox alignment="CENTER_LEFT" spacing="8.0">
                                                   <children>
                                                      <Label text="✅" style="-fx-font-size: 16px;" />
                                                      <!-- Real tasks completed count -->
                                                      <Label fx:id="tasksCompletedLabel" text="Loading..." styleClass="stat-number">
                                                         <font><Font name="System Bold" size="13.0" /></font>
                                                      </Label>
                                                   </children>
                                                </HBox>
                                                <Label text="Tasks Today" styleClass="stat-label" />
                                                <ProgressBar fx:id="tasksProgressBar" progress="0.0" styleClass="stat-progress" prefHeight="4.0" />
                                             </children>
                                          </VBox>

                                          <VBox styleClass="stat-card-modern" HBox.hgrow="ALWAYS" spacing="6.0">
                                             <children>
                                                <HBox alignment="CENTER_LEFT" spacing="8.0">
                                                   <children>
                                                      <Label text="🍅" style="-fx-font-size: 16px;" />
                                                      <!-- Real focus time from database -->
                                                      <Label fx:id="focusTimeLabel" text="Loading..." styleClass="stat-number">
                                                         <font><Font name="System Bold" size="13.0" /></font>
                                                      </Label>
                                                   </children>
                                                </HBox>
                                                <Label text="Focus Time" styleClass="stat-label" />
                                                <ProgressBar fx:id="focusProgressBar" progress="0.0" styleClass="stat-progress" prefHeight="4.0" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>

                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox styleClass="stat-card-modern" HBox.hgrow="ALWAYS" spacing="6.0">
                                             <children>
                                                <HBox alignment="CENTER_LEFT" spacing="8.0">
                                                   <children>
                                                      <Label text="🎯" style="-fx-font-size: 16px;" />
                                                      <!-- Real goals progress from database -->
                                                      <Label fx:id="goalsProgressLabel" text="0/0" styleClass="stat-number">
                                                         <font><Font name="System Bold" size="13.0" /></font>
                                                      </Label>
                                                   </children>
                                                </HBox>
                                                <Label text="Goals Progress" styleClass="stat-label" />
                                                <ProgressBar fx:id="goalsProgressBar" progress="0.0" styleClass="stat-progress" prefHeight="4.0" />
                                             </children>
                                          </VBox>

                                          <VBox styleClass="stat-card-modern" HBox.hgrow="ALWAYS" spacing="6.0">
                                             <children>
                                                <HBox alignment="CENTER_LEFT" spacing="8.0">
                                                   <children>
                                                      <Label text="😊" style="-fx-font-size: 16px;" />
                                                      <!-- Real mood average from database -->
                                                      <Label fx:id="moodAverageLabel" text="0.0/5" styleClass="stat-number">
                                                         <font><Font name="System Bold" size="13.0" /></font>
                                                      </Label>
                                                   </children>
                                                </HBox>
                                                <Label text="Mood Average" styleClass="stat-label" />
                                                <ProgressBar fx:id="moodProgressBar" progress="0.0" styleClass="stat-progress" prefHeight="4.0" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Pomodoro Timer Card (Unchanged) -->
                              <VBox styleClass="timer-card-enhanced" spacing="15.0" prefWidth="240.0">
                                 <children>
                                    <VBox alignment="CENTER" spacing="12.0">
                                       <children>
                                          <Label text="🍅 Focus Session" styleClass="timer-title">
                                             <font><Font name="System Bold" size="13.0" /></font>
                                          </Label>

                                          <StackPane>
                                             <children>
                                                <Circle radius="60.0" styleClass="timer-circle-bg" />
                                                <Circle radius="56.0" styleClass="timer-circle-progress" />
                                                <VBox alignment="CENTER" spacing="3.0">
                                                   <children>
                                                      <Label fx:id="timerDisplay" text="25:00" styleClass="timer-display-enhanced">
                                                         <font><Font name="System Light" size="24.0" /></font>
                                                      </Label>
                                                      <Label text="minutes left" styleClass="timer-subtitle">
                                                         <font><Font size="9.0" /></font>
                                                      </Label>
                                                   </children>
                                                </VBox>
                                             </children>
                                          </StackPane>

                                          <ProgressBar fx:id="timerProgress" progress="0.0" prefWidth="160.0" styleClass="timer-progress-bar" />

                                          <HBox spacing="8.0" alignment="CENTER">
                                             <children>
                                                <Button fx:id="startTimerBtn" styleClass="timer-button-start" text="▶" prefWidth="35.0" prefHeight="35.0" />
                                                <Button fx:id="pauseTimerBtn" styleClass="timer-button-pause" text="⏸" prefWidth="35.0" prefHeight="35.0" />
                                                <Button fx:id="resetTimerBtn" styleClass="timer-button-reset" text="⏹" prefWidth="35.0" prefHeight="35.0" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>

                        <!-- MAIN CONTENT GRID WITH REAL DATA -->
                        <HBox spacing="20.0" fillHeight="true">
                           <children>
                              <!-- LEFT COLUMN -->
                              <VBox spacing="18.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <!-- Today's Tasks with Real Data -->
                                    <VBox styleClass="card-modern" spacing="15.0">
                                       <children>
                                          <HBox alignment="CENTER_LEFT" spacing="12.0">
                                             <children>
                                                <VBox spacing="1.0">
                                                   <children>
                                                      <Label text="Today's Tasks" styleClass="card-title-large">
                                                         <font><Font name="System Bold" size="15.0" /></font>
                                                      </Label>
                                                      <Label text="Focus on what matters most" styleClass="card-subtitle" />
                                                   </children>
                                                </VBox>
                                                <Region HBox.hgrow="ALWAYS" />
                                                <Button text="View All" styleClass="link-button" onAction="#showTasks" />
                                             </children>
                                          </HBox>

                                          <!-- Real tasks list loaded from database -->
                                          <VBox fx:id="tasksList" spacing="8.0" />

                                          <Button text="+ Add New Task" styleClass="add-button" maxWidth="Infinity" onAction="#showTasks" />
                                       </children>
                                    </VBox>

                                    <!-- Quick Actions -->
                                    <VBox styleClass="card-modern" spacing="15.0">
                                       <children>
                                          <Label text="Quick Actions" styleClass="card-title-large">
                                             <font><Font name="System Bold" size="14.0" /></font>
                                          </Label>

                                          <GridPane hgap="10.0" vgap="10.0">
                                             <children>
                                                <Button text="📝 New Note" styleClass="quick-action-button" prefWidth="110.0" prefHeight="45.0" GridPane.columnIndex="0" GridPane.rowIndex="0" onAction="#showNotes" />
                                                <Button text="🎯 Set Goal" styleClass="quick-action-button" prefWidth="110.0" prefHeight="45.0" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#showGoals" />
                                                <Button text="😊 Log Mood" styleClass="quick-action-button" prefWidth="110.0" prefHeight="45.0" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#showMoodTracker" />
                                                <Button text="💾 Export" styleClass="quick-action-button" prefWidth="110.0" prefHeight="45.0" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#showExport" />
                                             </children>
                                          </GridPane>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>

                              <!-- RIGHT COLUMN WITH REAL DATA -->
                              <VBox spacing="18.0" prefWidth="280.0">
                                 <children>
                                    <!-- Real Productivity Insights -->
                                    <VBox styleClass="card-modern" spacing="15.0">
                                       <children>
                                          <HBox alignment="CENTER_LEFT" spacing="8.0">
                                             <children>
                                                <Label text="📊" style="-fx-font-size: 14px;" />
                                                <Label text="Productivity Insights" styleClass="card-title-large">
                                                   <font><Font name="System Bold" size="13.0" /></font>
                                                </Label>
                                             </children>
                                          </HBox>

                                          <VBox spacing="12.0">
                                             <children>
                                                <HBox spacing="12.0" alignment="CENTER_LEFT">
                                                   <children>
                                                      <VBox alignment="CENTER" spacing="3.0">
                                                         <children>
                                                            <Label text="🔥" style="-fx-font-size: 18px;" />
                                                            <!-- Real streak days from database -->
                                                            <Label fx:id="streakDaysLabel" text="0 days" styleClass="insight-number" />
                                                            <Label text="Streak" styleClass="insight-label" />
                                                         </children>
                                                      </VBox>
                                                      <Region HBox.hgrow="ALWAYS" />
                                                      <VBox alignment="CENTER" spacing="3.0">
                                                         <children>
                                                            <Label text="⚡" style="-fx-font-size: 18px;" />
                                                            <!-- Real efficiency from database -->
                                                            <Label fx:id="efficiencyLabel" text="0%" styleClass="insight-number" />
                                                            <Label text="Efficiency" styleClass="insight-label" />
                                                         </children>
                                                      </VBox>
                                                   </children>
                                                </HBox>

                                                <Separator />

                                                <VBox spacing="6.0">
                                                   <children>
                                                      <Label text="Today's Progress" styleClass="card-subtitle" />
                                                      <HBox spacing="8.0" alignment="CENTER_LEFT">
                                                         <children>
                                                            <Label text="Tasks" styleClass="progress-label" />
                                                            <ProgressBar fx:id="todayTasksProgress" progress="0.0" HBox.hgrow="ALWAYS" styleClass="insight-progress" />
                                                            <Label fx:id="todayTasksLabel" text="0/0" styleClass="progress-value" />
                                                         </children>
                                                      </HBox>
                                                      <HBox spacing="8.0" alignment="CENTER_LEFT">
                                                         <children>
                                                            <Label text="Focus" styleClass="progress-label" />
                                                            <ProgressBar fx:id="todayFocusProgress" progress="0.0" HBox.hgrow="ALWAYS" styleClass="insight-progress" />
                                                            <Label fx:id="todayFocusLabel" text="0h" styleClass="progress-value" />
                                                         </children>
                                                      </HBox>
                                                   </children>
                                                </VBox>
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>

                                    <!-- Real Recent Activity -->
                                    <VBox styleClass="card-modern" spacing="15.0">
                                       <children>
                                          <HBox alignment="CENTER_LEFT" spacing="8.0">
                                             <children>
                                                <Label text="⚡" style="-fx-font-size: 14px;" />
                                                <Label text="Recent Activity" styleClass="card-title-large">
                                                   <font><Font name="System Bold" size="13.0" /></font>
                                                </Label>
                                             </children>
                                          </HBox>

                                          <!-- Real activity list loaded from database -->
                                          <VBox fx:id="recentActivityList" spacing="8.0">
                                             <children>
                                                <Label text="Loading recent activities..." styleClass="activity-title" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>

                                    <!-- Dynamic Motivational Card -->
                                    <VBox styleClass="inspiration-card-enhanced" spacing="12.0">
                                       <children>
                                          <HBox alignment="CENTER" spacing="8.0">
                                             <children>
                                                <Label text="🌟" style="-fx-font-size: 18px;" />
                                                <Label text="Keep Going!" styleClass="inspiration-title">
                                                   <font><Font name="System Bold" size="13.0" /></font>
                                                </Label>
                                             </children>
                                          </HBox>
                                          <!-- Dynamic motivational text based on progress -->
                                          <Label fx:id="motivationalTextLabel" text="Stay focused and keep pushing forward!"
                                                 styleClass="inspiration-text" wrapText="true" textAlignment="CENTER">
                                             <font><Font size="11.0" /></font>
                                          </Label>
                                          <Button text="View Achievements" styleClass="inspiration-button" onAction="#showGoals" />
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                     <padding><Insets bottom="25.0" left="20.0" right="20.0" top="20.0" /></padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </StackPane>
   </center>

</BorderPane>